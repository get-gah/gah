{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/marverix/gah/refs/heads/db/schema.json",
  "title": "gah db.json schema",
  "description": "JSON schema for gah's db.json file.",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "aliases": {
      "description": "Map of aliases in format alias => full repo name.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/fullRepoName"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "fullRepoName": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+$"
    }
  },
  "type": "object"
}
